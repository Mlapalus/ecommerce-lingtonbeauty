{% extends 'base.html.twig' %}

{% block title %}MMes adresses
{% endblock %}

{% block content %}

	<div class="container-fluid">
		<div class="row">
			{% include "account/fragments/_sidebarAccount.html.twig" %}
			<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
				<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
					<h1 class="h2">Vos adresses</h1>
                    <a class="btn btn-info btn-sm"href="{{ path('account_add_address') }}">Ajouter une adrresse</a>
				</div>
                <div>
                    {% if app.user.addresses|length == 0 %}
                        <p>Vous n'avez pas encore enregistrer d'adresse pour votre compte</p>
                    {% else %}
                        <p>Vos adresses enregistrÃ©es</p>
                        {% for address in app.user.addresses %}
                            <h3>{{address.name}}</h3>
                            <address>
                                {{address.firstName}} {{address.lastName}}<br>
                                {% if address.company %}
                                {{address.company}}</br>
                                {% endif %}
                                {{address.adress}}</br>
                                {{address.postal}} {{address.city}}</br>
                                {{address.country}}</br>
                                Tel: {{address.phone}}</br>
                            </address>
                            <div>
                                <a href="{{path('account_modify_address', {'name': address.name})}}">Modifier</a>
                                -
                                <a href="{{path('account_delete_address', {'name': address.name})}}">Supprimer</a>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
			</main>
		</div>
	</div>

{% endblock %}

